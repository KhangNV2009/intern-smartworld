<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".authentication.TestActivity"
        tools:ignore="ScrollViewCount">
        <LinearLayout
            android:background="#F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="251dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:background="@drawable/city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:elevation="2dp"
                    android:gravity="center"
                    android:background="@drawable/background_black_alpha"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_weather_location"
                        android:layout_gravity="center"
                        android:textColor="@color/white2"
                        android:textSize="30sp"
                        android:text="Thành phố Hồ Chí Minh"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_weather_temp"
                        android:layout_gravity="center"
                        android:textColor="@color/white2"
                        android:textSize="100sp"
                        android:text="30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_weather_type"
                        android:layout_gravity="center"
                        android:textColor="@color/white2"
                        android:textSize="30sp"
                        android:text="Sunny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:elevation="2dp"
                android:background="@color/white2"
                android:layout_marginVertical="10dp"
                android:clipToPadding="false"
                android:paddingEnd="10dp"
                android:id="@+id/rv_daily"
                android:paddingVertical="10dp"
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry">
            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:elevation="2dp"
                android:background="@color/white2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:weightSum="3"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingVertical="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_thermometer"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_feel_like"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="30°C"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="Nhiệt độ"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_radar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_visibility"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="10km"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="Độ hiển thị"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingVertical="8dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_sun"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="Rất yếu"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="UV"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="3"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingVertical="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_humidity"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_humidity"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="58%"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="Độ ẩm"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_wind"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_speed"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="22 km/h"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="ĐNN"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingVertical="8dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_meter"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_pressure"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="1007hPa"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="Áp suất không khí"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>